{
  "name": "ai-assistant-pro-backend",
  "version": "1.0.0",
  "description": "Advanced AI Assistant Pro Backend Service with Custom Intelligence",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "echo 'No build step required for Node.js backend'",
    "docker:build": "docker build -t ai-assistant-pro-backend .",
    "docker:run": "docker run -p 3001:3001 ai-assistant-pro-backend",
    "setup": "npm install && npm run setup:env",
    "setup:env": "cp .env.example .env",
    "logs": "tail -f logs/combined.log",
    "health": "curl http://localhost:3001/api/health"
  },
  "keywords": [
    "ai",
    "assistant",
    "artificial-intelligence",
    "chatbot",
    "api",
    "backend",
    "node.js",
    "express",
    "openai",
    "anthropic",
    "google-ai"
  ],
  "author": "Roberto Torres",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "axios": "^1.6.2",
    "openai": "^4.20.1",
    "@anthropic-ai/sdk": "^0.9.1",
    "@google/generative-ai": "^0.2.1",
    "crypto": "^1.0.1",
    "fs": "^0.0.1-security",
    "path": "^0.12.7",
    "child_process": "^1.0.2",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "pdf-parse": "^1.1.1",
    "mammoth": "^1.6.0",
    "xlsx": "^0.18.5",
    "cheerio": "^1.0.0-rc.12",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "@types/jest": "^29.5.8",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robertotorres1222-beep/ai-assistant-pro.git"
  },
  "bugs": {
    "url": "https://github.com/robertotorres1222-beep/ai-assistant-pro/issues"
  },
  "homepage": "https://github.com/robertotorres1222-beep/ai-assistant-pro#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "services/**/*.js",
      "server.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}

